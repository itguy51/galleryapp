<h1>Images on disk</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image Preview</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
<% puts image.inspect %>  
  <tr>
    <td><%= image.title %></td>
    <td><%= image.desc %></td>
    <!--<td><%= image.file %></td>-->
    <td><%= image_tag "/uploads/#{image.file}"%></td>
    <td><%= link_to 'Show', image %></td>

    <td><%= link_to 'Delete', "/pages/#{image.page_id}/images/#{image.id}", :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

